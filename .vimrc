filetype on
filetype plugin on
filetype indent on

set number
set relativenumber

set shiftwidth=2
set softtabstop=2
set tabstop=2

set scrolloff=8
set smartindent
set autoindent

set smarttab
set expandtab

set nowrap

set hlsearch
set incsearch

set showcmd
set showmatch

set history=100

set ignorecase
set smartcase

set wildmenu
